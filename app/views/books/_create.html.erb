<div class="left-">
  <%= image_tag user.get_profile_image(100,100) %>
  <table>
    <tr>
     <th>name</th>
     <th><%= user.name %></th>
    </tr>
    <tr>
     <th>introduction</th>
     <th><%= user.introduction %></th>
    </tr>
  </table>
  
  <div class="profile_edit_botann">
    <%= link_to edit_user_path(user.id) do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

<h2>New book</h2>

<%= form_with model: book do |f| %>

  <label>Title</label>
    <%= f.text_field :title %>

  <label>Opinion</label>
    <%= f.text_area :body %>

  <%= f.submit "Create Book" %>

<% end %>

</div>