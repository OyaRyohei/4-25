<%= render "books/create", book:@new_book, user:current_user %>

<h2>Book detail</h2>

  <tabel>
    <tbody>
      <tr>
        <%= link_to user_session_path do %>
          <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
          <td><%= @book.user.name %></td>
        <% end %>
        
        <%= link_to @book do %>
          <td><%= @book.title %></td>
        <% end %>
        
        <td><%= @book.body %></td>
        
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
        <% end %>
      </tr>
    </tbody>  
  </tabel>