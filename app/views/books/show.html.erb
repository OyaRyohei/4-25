<%= render "books/create", book:@new_book, user:current_user %>

<h2>Book detail</h2>



  <tabel>
    <tbody>
      <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
        <td>ユーザーネーム:<%= @book.user.name %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.id) %>
            <% end %>
        </td>
        <td><% if @book.user == current_user %>
              <%= link_to "Destroy", books_path(@book), method: :delete %>
            <% end %>
        </td>
      </tr>
    </tbody>  
  </tabel>